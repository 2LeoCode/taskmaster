{
  "$schema": "./tmconfig.schema.json",
  "tasks": [
    {
      "name": "hello-world",
      "command": "bash",
      "arguments": ["-c", "sleep 2; echo $HELLO"],
      "environment": {
        "HELLO": "Hello world!"
      },
      "startTime": 5000,
      "stopSignal": "SIGINT",
      "stdout": "ignore"
    }
  ],
  "logDir": "./logs"
}
